                "today": "<span color='#00ccff'><b>{}</b></span>"
            }
        } */
        //"tooltip-format": "<big>{:%H %B}</big>\n<tt><small>{calendar}</small></tt>",
        //"format-alt": "{:%d/%m/%Y}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "custom/exit": {
        "format": "{icon}",
        "format-icons": " <span font='24px'>‚èª</span>",
        //"format-size": 64,
        "on-click": "wlogout",
        "tooltip": false
    },
